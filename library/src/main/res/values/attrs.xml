<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SegmentedButton">
        <attr name="sb_imageTint" format="color"/>
        <attr name="sb_imageScale" format="float"/>
        <attr name="sb_selectedImageTint" format="color"/>
        <attr name="sb_selectedTextColor" format="color"/>
        <attr name="sb_rippleColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SegmentedButtonGroup">

        <attr name="sbg_ripple" format="boolean"/>
        <attr name="sbg_rippleColor" format="color"/>

        <attr name="sbg_selectorImageTint" format="color"/>
        <attr name="sbg_selectorTextColor" format="color"/>
        <attr name="sbg_selectorColor" format="color"/>

        <attr name="sbg_dividerSize" format="dimension"/>
        <attr name="sbg_dividerPadding" format="dimension"/>
        <attr name="sbg_dividerColor" format="color"/>
        <attr name="sbg_dividerRadius" format="dimension"/>

        <attr name="sbg_shadow" format="boolean"/>
        <attr name="sbg_shadowElevation" format="dimension"/>
        <attr name="sbg_shadowMargin" format="dimension"/>
        <attr name="sbg_shadowMarginTop" format="dimension"/>
        <attr name="sbg_shadowMarginBottom" format="dimension"/>
        <attr name="sbg_shadowMarginLeft" format="dimension"/>
        <attr name="sbg_shadowMarginRight" format="dimension"/>

        <attr name="sbg_position" format="integer"/>
        <attr name="sbg_radius" format="dimension"/>
        <attr name="sbg_backgroundColor" format="color"/>

        <attr name="sbg_animateSelectorDuration" format="integer"/>
        <attr name="sbg_animateSelector" format="integer">
            <flag name="fastOutSlowIn" value="0"/>
            <flag name="bounce" value="1"/>
            <flag name="linear" value="2"/>
            <flag name="decelerate" value="3"/>
            <flag name="cycle" value="4"/>
            <flag name="anticipate" value="5"/>
            <flag name="accelerateDecelerate" value="6"/>
            <flag name="accelerate" value="7"/>
            <flag name="anticipateOvershoot" value="8"/>
            <flag name="fastOutLinearIn" value="9"/>
            <flag name="linearOutSlowIn" value="10"/>
            <flag name="overshoot" value="11"/>
        </attr>
    </declare-styleable>
</resources>